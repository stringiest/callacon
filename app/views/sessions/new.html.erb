<div class="card mx-auto text-center px-4 pt-4 pb-3 mt-5" style="width: 375px;">
  <h3 class="card-title mb-3" style="font-weight: lighter;">Log In</h3>
  <%= form_tag sessions_path do %>
    <%= text_field_tag 'email', nil, placeholder: 'email', class: "form-control mb-3" %>
    <%= password_field_tag 'password', nil, placeholder: 'password', class: "form-control mb-3" %>
  <%= submit_tag 'Sign In', class: "btn btn-primary" %>
  <% end %>
</div>
