<div class="card mx-auto text-center px-4 pt-4 pb-3 mt-5" style="width: 375px;">
  <%= form_for @booking do |f| %>
    <%= f.text_area :arrival, placeholder: "arrival date", class: "form-control mb-3" %>
    <%= f.text_area :departure, placeholder: "departure date", class: "form-control mb-3" %>
    <%= f.submit 'Submit', class: "btn btn-success" %>
  <% end %>
</div>
