<% @bookings.reverse.each do |booking| %>
  <div class="card mb-5 mx-auto" style="width: 80%;">
    <span class="card-header">
      <b>
        <%= booking.user.username.capitalize %>
      </b>
      <% if booking.user == current_user %>
      <span style="float: right;">
        <%= link_to "Edit", edit_booking_path(booking) %>
        <%= link_to "Delete", booking_path(booking), method: :delete, data: { confirm: "Are you sure?"} %>
      </span>
      <% end %>
    </span>
    <span class="d-inline-flex">
      <p> Arrival date: </p><p class="text-justify m-2"><%= booking.arrival %></p>
    </span>
    <span class="d-inline-flex">
      <p> Departure date: </p><p class="text-justify m-2"><%= booking.departure %></p>
    </span>
  </div>
<% end %>